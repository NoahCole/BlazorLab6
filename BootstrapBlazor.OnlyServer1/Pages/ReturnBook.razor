@page "/return-book"

<h3>Return Book</h3>
<a href="/return-book">Return Book</a>
@code {
    
    public class Book
    {
        public string Title { get; set; }
        public string Author { get; set; }
    }

    
    List<Book> borrowedBooks = new List<Book>
    {
        new Book { Title = "Book1", Author = "Author1" },
        new Book { Title = "Book2", Author = "Author2" },
        
    };
}


@if (borrowedBooks != null && borrowedBooks.Any())
{
    <ul>
        @foreach (var entry in borrowedBooks)
        {
            <li>@entry.Title by @entry.Author</li>
        }
    </ul>
}
else
{
    <p>No books borrowed.</p>
}

